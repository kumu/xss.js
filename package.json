  "dependencies": {
    "cheerio": "*"
  },
  "devDependencies": {
    "jquery": "*",
    "chai": "~1.9.0",
    "mocha": "~1.17.1",
    "gulp": "~3.2.4",
    "gulp-jshint": "~1.3.4",
    "browserify": "~3.32.0",
    "browserify-shim": "~3.3.1",
    "gulp-replace": "~0.2.0",
    "gulp-uglify": "~0.2.1"
  },
  "browserify": {
    "transform": [
